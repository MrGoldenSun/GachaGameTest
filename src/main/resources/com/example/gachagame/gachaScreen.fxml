               <font>
                  <Font name="Comic Sans MS" size="28.0" />
               </font>
            </Label>
            <ImageView fx:id="characterUnlocked" fitHeight="150.0" fitWidth="200.0" layoutX="51.0" layoutY="73.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../goldenGrinner.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
