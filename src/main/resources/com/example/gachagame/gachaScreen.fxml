<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gachagame.CollectionController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true">
         <image>
            <Image url="@../../../paperbackground.png" />
         </image></ImageView>
      <Label layoutX="239.0" layoutY="275.0" prefHeight="45.0" prefWidth="122.0" text="Use a coin?">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <ImageView fitHeight="63.0" fitWidth="55.0" layoutX="10.0" layoutY="17.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../goldCoin.png" />
         </image>
      </ImageView>
      <Label fx:id="coinCounter" layoutX="79.0" layoutY="25.0" prefHeight="46.0" prefWidth="28.0" text="0">
         <font>
            <Font name="Comic Sans MS" size="30.0" />
         </font>
      </Label>
      <Button fx:id="rollButton" layoutX="231.0" layoutY="320.0" mnemonicParsing="false" onAction="#rollCharacter" prefHeight="44.0" prefWidth="138.0" text="Roll">
